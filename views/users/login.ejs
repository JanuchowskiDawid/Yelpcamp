<% layout('layouts/boilerplate') %>
    <div class="col-6 offset-3">
        <h1>Login!</h1>
        <form action="/login" class="validated-form" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="location">Username</label>
                <input class="form-control" type="text" name="username" id="username" required>
                <div class="valid-feedback">Looks fine</div>
                <div class="invalid-feedback">Fill in this field</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Password</label>
                <input class="form-control" type="password" name="password" id="password" required>
                <div class="valid-feedback">Looks fine</div>
                <div class="invalid-feedback">Fill in this field</div>
            </div>
            <div class=" mb-3">
                <button class="btn btn-submit btn-success">Login!</button>
            </div>
        </form>
    </div>