<% layout('layouts/boilerplate') %>
    <div class="col-6 offset-3">
        <h1>Register!</h1>
        <form action="/register" class="validated-form" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="location">Username</label>
                <input class="form-control" type="text" name="User[username]" id="username" required>
                <div class="valid-feedback">Looks fine</div>
                <div class="invalid-feedback">Fill in this field</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">E-mail</label>
                <input class="form-control" type="email" name="User[email]" id="email" required>
                <div class="valid-feedback">Looks fine</div>
                <div class="invalid-feedback">Fill in this field</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Password</label>
                <input class="form-control" type="password" name="User[password]" id="password" required>
                <div class="valid-feedback">Looks fine</div>
                <div class="invalid-feedback">Fill in this field</div>
            </div>
            <div class=" mb-3">
                <button class="btn btn-submit btn-success">Register!</button>
            </div>
        </form>
    </div>