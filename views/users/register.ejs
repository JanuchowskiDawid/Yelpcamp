<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1486915309851-b0cc1f8a0084?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                    alt="" class="card-img-top" style="height: 17rem; object-fit: conver;">
                <h5 class="card-title">Register!</h5>
                <form action="/register" class="validated-form" method="post" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="location">Username</label>
                        <input class="form-control" type="text" name="User[username]" id="username" autofocus required>
                        <div class="valid-feedback">Looks fine</div>
                        <div class="invalid-feedback">Fill in this field</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">E-mail</label>
                        <input class="form-control" type="email" name="User[email]" id="email" required>
                        <div class="valid-feedback">Looks fine</div>
                        <div class="invalid-feedback">Fill in this field</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Password</label>
                        <input class="form-control" type="password" name="User[password]" id="password" required>
                        <div class="valid-feedback">Looks fine</div>
                        <div class="invalid-feedback">Fill in this field</div>
                    </div>
                    <div class=" mb-3">
                        <button class="btn btn-submit btn-success">Register!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>