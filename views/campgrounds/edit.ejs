<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center"> Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
                <div class="mb-3">
                    <label class="form-lavel" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%=campground.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-lavel" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%=campground.location%>">
                </div>
                <div class=" mb-3">
                    <label class="form-lavel" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="<%=campground.image%>>
                </div>
                <div class=" mb-3">
                    <label class="form-lavel" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]"
                        id="description"><%=campground.description%></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-lavel" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" placeholder="0" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>">
                    </div>
                </div>
                <div class=" mb-3">
                    <button class="btn btn-submit btn-dark">Submit</button>
                </div>

                <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
            </form>
        </div>
    </div>